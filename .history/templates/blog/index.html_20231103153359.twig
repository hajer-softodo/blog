{% extends 'base.html.twig' %}

{% block title %}hi BlogController!{% endblock %}

{% block body %}
  <section class="articles">
  {% for article in articles %}
            <article>
                <h2>{{ article.title }}</h2>
                <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('d/m/Y') }} dans la catégorie Politique</div>
                <div class="content">
                <img src="{{ article.image }}" alt="">
                 {{ article.content }}
                    <a href="{{ path('blog_show') }}" class="btn btn-primary">Lire la suite</a>

                </div>
            </article>
      
      {% endfor %}
  </section>   
{% endblock %}
