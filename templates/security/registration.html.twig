{% extends 'base.html.twig' %}


{% block body %}

<h1>Inscription sur le site </h1>

        {{ form_start(form) }}
        {{ form_row(form.username, { 'attr': {'label': 'Nom d\'utilisateur', 'Placeholder': "Enter your Name ..." } }) }}
        {{ form_row(form.email, { 'attr': {'label': 'Email', 'Placeholder': "Adresse Email ..." } }) }}
        {{ form_row(form.password, { 'attr': {'label': 'Password', 'Placeholder': "Enter your password ..." } }) }}
        {{ form_row(form.confirm_password, { 'attr': {'label': 'Confirm Password', 'Placeholder': "Confirm Your Password ..." } }) }}
        
         <button type="submit" class="btn btn-success">Inscription</button>
        {{ form_end(form) }}
{% endblock %}